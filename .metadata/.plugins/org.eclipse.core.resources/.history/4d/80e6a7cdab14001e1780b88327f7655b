	margin : 20px auto;
/* 	두개 동시에주기 -> 위아래, 좌우 --> 좌우 : auto - 가운데로 정렬 */
	padding : 50px;
}
</style>

<script>
function calc(){
	
	//id가 price인 요소와 id가 qty인 요소를 검색	=>document.getElementById
	//값을 가져온다 - value			==>여기서 얻어지는 값 : String
	var price = parseInt(document.getElementById('price').value);
	var qty = parseInt(document.getElementById('qty').value);
	
	//계산	=> String * String를 숫자로 계산하려면=> window.parseInt (window.은 생략해도됨)
	//스크립트는 더하기할때만 인트로 바꿈 => 곱하기 빼기 나누기는 정수로 안바꿔도 됨	, 나누기할때 정수/정수 해도 실수 나옴
// 	var res = parseInt(price) * parseInt(qty);
	
	var res = "물품가격 : "+price.toLocaleString()+"<br>"
// 	toLocaleString => 쉼표찍기
	res+= "수량 : "+ qty +"<br>"
	res += price + "*" + qty + "=" + price * qty;
	
	//계산 결과를 출력 - id="result"인 요소에 출력 => id= "result"인 요소를 검색 -> div -> inner~
	document.querySelector('#result').innerHTML = res;
	//찍으려고하는 값 (res)에 HTML태그가 없음 => innerText
}
</script>

</head>
<body>
<form action="inputbutton2.jsp" method="post">
