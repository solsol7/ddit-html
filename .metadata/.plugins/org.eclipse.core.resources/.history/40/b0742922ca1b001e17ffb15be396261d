<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script>

proc1 = () => {
	str="";
	cont = true;
	
	while(cont){
		//su1입력
		su1=parseInt(prompt("첫번째 수 입력"));
		//su2입력
		su2=parseInt(prompt("두번째 수 입력"));
		//더하기 값 100이상이면 출력변수에 누적
		if(su1+su2>=100){
			str += su1 + " " + su2 + "<br>";
		}
		//계속할래? 안할래? - confirm();
		cont=confirm("계속?");
	}
	//출력

	//result1검색 - str
	document.getElementById('result1').innerHTML = str;
	
}

proc2 = () => {
	
	str = "";
	
	while(true){
		//구구단 수 입력
		gugu = prompt("수를 입력하세요.");
		
		//구구단 출력
		for(i=1; i<=9; i++){
			str += `${gugu} * ${i} = ${gugu*i}<br>`;
		}
		str+="<br>";
		//계속할래?
		cont = confirm('계속?');
		//비교 - false
		if(!cont) break;
	}
	
	//출력 - result2검색 = str
}
</script>
</head>
<body>
<h3>두 수를 입력하여 합이 100 이상인 경우만 출력<br>
confirm()함수를 이용하여 종료
</h3>
<input type="button" value="확인" onclick="proc1()">
<br>
<div id="result1"></div>

<br>
<hr color = 'red'>
<h3>구구</h3>
<input type="button" value="확인" onclick="proc2()">
<br>
<div id="result2"></div>


</body>
</html>