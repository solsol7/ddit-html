<script>
proc1 = () => {
	//첫번째 ul요소를 검색
	vul = document.querySelector('ul');
// 	vul = document.getElementsTagName('ul')[0];
	
	//li요소를 검색
	lilist = vul.getElementsByTagName('li');
// 	lilist = vul.querySelectorAll('li');
	
	str="";
	
	for(i=0; i<lilist.length; i++){
		//console.log(lilist[i].firstChild)
		//alert(lilist[i].firstChild.data)
		str += lilist[i].firstChild.data + "<br>";
	}
	
	document.getElementById('result1').innerHTML = str;
	
}
addText= () => {
	vtext = "안녕하세요";
	
	textNode = document.createTextNode(vtext);
	
	//부모.appendChild(자식)
	document.getElementById('result').appendChild(textNode);
}
proc2= () => {
// 	vul2.querySelectorAll('li');
	//vul2 = document.getElementsByTagName('ul');
	//vul2[1].querySelectorAll('li')
	
	vul2 = document.querySelectorAll('ul');		//전체가 나옴
	vul2[1]	//그 중에 1번째
	vlist = vul2[1].querySelectorAll('li');
	
	for(i=0; i<vlist.lenth; i++){
		alert(vlist[i].firstChild.data);
	}
}
</script>
