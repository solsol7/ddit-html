<!DOCTYPE html>
<html lang="ko">
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel="stylesheet" href="../css/style.css">
<script>
	today1 = new Date();
	today2 = new Date(100000);
	today3 = new Date("1999.3.5");
	today4 = new Date(1999, 3, 5);

proc1 = () => {
	
	str = `${today1} <br>`;
	str += `${today2} <br>`;
	str += `${today3} <br>`;
	str += `${today4} <br>`;
	
	document.querySelector('#result1').innerHTML = str;
}

proc2 = () => {
	str = today1.toLocaleString() + "<br>";		/*시간 날짜 다나옴*/
	str += today2.toLocaleDateString() + "<br>";		/*날짜만 나옴*/
	str += today3.toLocaleTimeString() + "<br>";		/*시간만 나옴*/
	str += today4.toLocaleString() + "<br>";
	
	document.querySelector("#result2").innerHTML = str;
}
</script>
</head>
<body>

<h3></h3>
<input type="button" value="확인" onclick="proc1()">
<input type="button" value="확인" onclick="proc2()">
<br>
<div class="ddres" id="result1"></div>
<div class="ddres" id="result2"></div>
<br>
<hr color="red">
</body>
</html>