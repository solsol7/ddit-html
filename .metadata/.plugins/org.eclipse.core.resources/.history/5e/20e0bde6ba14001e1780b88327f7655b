<script>
// onclick에 있는 함수
function check(){
	//id가 area인 html요소를 검색한다.
	var areaValue = document.getElementById('area').value;
	//document~~검색해서 >> .value 값을 가져와라
	console.log(areaValue)
	
	var varea=decument.ElementById('area');
	var areaValue = varea.value;
	//위에꺼나 아래꺼나 똑같음 - 변수 두개 똑같이 선언해서 써도 스크립트에서는 에러 안남 - 뒤에서 실행된 값만 남음
	
	console.log(areaValue)
}
</script>

