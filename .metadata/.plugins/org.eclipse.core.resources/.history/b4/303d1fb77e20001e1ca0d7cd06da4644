<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel="stylesheet" href="../css/style.css">
<script>

rand = Math.floor(Math.random()*100 + 1);
vcount = 0;
vstr = ""

proc1 = () => {
	
	vcount++;
	
	//입력한 값 가져오기 - insu를 검색 - 값 가져오기
	invalue = document.getElementById("insu").value;
	
	vstr += invalue + " ";
	//비교 - 힌트 작성
	
	if(invalue == rand){
		res = "정답입니다. <br>";
		res += `입력 횟수 : ${vcount} <br>`;
		res += `입력값들 : ${vstr} <br>`;
		res += `랜덤값 : ${rand} <br>`;
	}else if(invalue> rand){
		res = "더 작은 수를 입력하세요."
	}else{
		res = "더 큰 수를 입력하세요."
	}
	
	//출력
	document.getElementById("result1").innerHTML = res;
}

proc2 = () => {
	//배열 선언
	arr = ["가위", "바위", "보"];
	
	//랜덤
	rand = parseInt(Math.random()*arr.length);
	
	com = arr[rand];
	
	user = prompt("가위, 바위, 보를 입력하세요");
	
	//비교
	if(com == user){
		res = "비겼습니다";
	}else if(user=="가위"&&com=="보" || user=="바위"&&com=="가위" || user=="보"&&com=="바위"){
		res = "user가 이겼습니다";
	}else{
		res = "com이 이겼습니다";
	}
	
	//출력
	
	str = `com : ${com} <br>`;
	str += `user : ${user} <br>`;
	str += `결과 : ${res}`;
	
	document.getElementById('result2').innerHTML = str;
}
proc3 = () => {
	lotto = [];
	
	while(lotto.length<6){
		num = parseInt(Math.random()*45+1);
		if(lotto.indexOf(num)==-1){
			lotto += num + " ";
		}
	}
	
}
</script>
</head>
<body>

<h3></h3>
<p>1~100사이 숫자 입력</p>
<input type="text" id="insu">
<input type="button" value="확인" onclick="proc1()">
<br>
<div class="ddres" id="result1"></div>
<br>
<hr color="red">

<h3>가위 바위 보 게임을 할 수 있는 프로그램
(컴퓨터는 랜덤, 사용자는 prompt로 입력 받아서 처리)
</h3>
<input type="button" value="확인" onclick="proc2()">
<br>
<div class="ddres" id="result2"></div>
<br>
<hr color="red">
</body>
