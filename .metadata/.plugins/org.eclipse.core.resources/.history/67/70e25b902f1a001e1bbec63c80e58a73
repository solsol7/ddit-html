<script>
  window.onload = function(){
	//입력
	let vinput = window.prompt("이름을 입력하세요.","홍길동");	
			/*window 생략 가능(가장 상위 객체이기 때문), 첫번째 파라미터 필수항목, 두번째 파라미터 선택항목*/  
	
	//id=result인 요소를 검색, 출력
	document.getElementById('result').innerText = vinput;
	
  }

  function gugupro(){
	  //입력
	  let vinput = window.prompt("구구단 수를 입력하세요")
	  
	  //구구단 생성
	  //let res = "*******" + vinput + "단 *******<br>"
	  let res = `****** ${vinput}단 ******<br>`
	  for(let i=1; i<10; i++){
		res += `${vinput} * ${i} = ${vinput * i} <br>`;  
	  }
	  
	  //출력	  
	  document.getElementById('result2').style.height = '320px';
	  document.getElementById('result2').innerHTML = res;
  }
  
  function addpro(){
	  //첫번째 수 입력
	  su1 = parseInt(prompt("첫번째 수 입력"));
	  
	  //두번째 수 입력
	  su2 = parseInt(prompt("두번째 수 입력"));
	  
	  //더하기
	  addVal = su1 + su2 ;
	  
	  //출력 내용 만들기
	  str = `첫번째 수 : ${su1} <br>`;
	  str += `두번째 수 : ${su2} <br>`;
	  str += `${su1} + ${su2} = ${addVal} <br>`;
	  
	  //출력
	  document.getElementById('result3').innerHTML = str;
  }
  
</script>
<style>
div{
  border : 1px dotted orange;
  height : 50px;
  padding : 10px;
  margin : 10px;
  font-size : 1.5rem;
}
/*
#result2{ 				<==정적스타일
   height : 320px;
 }
