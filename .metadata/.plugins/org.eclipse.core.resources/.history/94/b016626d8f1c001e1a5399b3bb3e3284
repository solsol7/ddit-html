<meta charset="UTF-8">
<title>Insert title here</title>
<script>

function Rect(width, height){
	this.width = width;
	this.height = height;
	
	this.getArea = function(){
		return this.width * this.height;
	}
	
	this.getCircum = function(){
		return (this.width + this.height) *2;
	}
}

//원 객체를 통해서 생성되는 각각의 객체가 공통으로 사용할 수 있는 메서드를 추가
Rect.prototype.getName = function(){
	return this.name;
}

function proc1(){
	rect = new Rect(4,7);
	
	//메소드추가
	rect.getName = function(){
		
	}
	rectPrint(rect, '#result1');
	
	rect2 = new Rect(7,9);
	rectPrint(rect2, '#result2');

	rect2 = new Rect(7,9);
	rectPrint(rect3, '#result3');
}

function rectPrint(result){

	str = `가로 : ${rect.width} <br>`;
	str += ` 세로 : ${rect.height} <br>`;
	str += `면적  : ${rect.getArea()} <br>`;
	str += `둘레 : ${rect.getCircum()} <br>`;
	
	document.querySelector(result).innerHTML = str;
}

function proc2(){
	rect4 = new Rect(5,8);
	rect4.name = "사각형";
	
	addNamePrint('#result4');
	
	rest5 = new Rect(8, 2);
	rect5.name = "네모네모";
	
	addNamePrint('#result5');
}
function addNamePrint(rect, result){
	str = `이름 : `
	str += `가로 : ${rect.width} <br>`;
	str += ` 세로 : ${rect.height} <br>`;
	str += `면적  : ${rect.getArea()} <br>`;
	str += `둘레 : ${rect.getCircum()} <br>`;
	
	document.querySelector(result).innerHTML = str;
}
</script>
</head>
<body>
<h3>생성된 rect객체의 정보를 출력</h3>
<input type="button" value="확인" onclick="proc1()">
<br>
<div id="result1"></div>
<div id="result2"></div>
<div id="result3"></div>
<br>
<hr color='red'>

