<script>

const arr= ["사과","바나나","복숭아","사과","참외","수박","사과"];
//arr = new Array("사과","바나나","복숭아","사과","참외","수박","사과");
//함수 밖에서 선언했기 때문에 전역객체, const이기 때문에 arr=arr2 이렇게 안됨

function proc1(){
	//idx = arr.indexOf("사과",1);
	//idx = arr.lastIndexOf("자두");
	
	//alert(idx+"번째")
	
	//과일 이름 입력하기
	input = prompt("과일 이름을 입력하세요");
	
	//입력한 과일 찾기
	idx = arr.indexOf(input,0);
	
	//비교 하기 (있느냐 없느냐) 찾는 과일은 없습니다/ 몇번째에 있습니다
	res = "찾는과일 : " + input +"<br>";
	if(idx==-1){
		res += "찾는 과일은 없습니다.";
		document.getElementById('result1').innerHTML=res;
	}else{
		res += idx +"번 째에 있습니다.";
		document.getElementById('result1').innerHTML=res;		
	}
}

function proc2(){
	
	idx = 0;
	fruits = prompt("과일 이름을 입력하세요");
	res = "찾는 과일 : "+fruits + "<br>";

	while(true){
		idx = arr.indexOf(furits, idx);
		if(idx == -1) {
			res += "찾는 과일은 없습니다.";
			document.getElementById('result2').innerHTML=res;
			break;
		}
		
	}
	
	
	
}

</script>
