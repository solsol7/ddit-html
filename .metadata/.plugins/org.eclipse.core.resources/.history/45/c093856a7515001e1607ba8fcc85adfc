<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<style>
 body{  /* ==>정적 스타일 */ 
  /* 	고정적인것. 한번 정하면 변경할 수가 없음 */
 	/* background : yellow; */
/*  	background : #ffafaa; */
/* 	background : rgb(215, 192, 200); */
	background : rgb(89%, 30%, 75%);
 }
</style>
<script>
function proc(){
	//html요소 검색
	namevalue = document.getElementById('name').value;
	birvalue = document.getElementById('bir').value;
	colorvalue = document.getElementById('color').value;
	rvalue = document.getElementById('range').value;
	
	console.log(namevalue, birvalue, colorvalue, rvalue);
	
	//body태그 검색 -> colorvalue값으로 전체 영역의 색을 변경한다
	let vbody = document.querySelector('body')
	vbody.style.background = colorvalue;
}

function change(){
	//rgb의 수를 랜덤으로 발생
	cr = Math.floor(Math.random()*256)
	cg = Math.floor(Math.random()*256)
	cb = Math.floor(Math.random()*256)
	
	console.log(cr, cg, cb);
	
	cr16 = cr.toString(16);
	cg16= cg.toString(16);
	cb16 = cb.toString(16);
	
	console.log(cr16, cg16, cb16);

	//body태그 검색 -> colorvalue값으로 전체 영역의 색을 변경한다
	let vbody = document.querySelector('body')
	vbody.style.background = "#"+cr16+cg16+cb16;
}
</script>

</head>
<body>

<form>
	이름<input name="name" id="name"><br>
	생일<input type="date" id="bir" name="bir"><br>
	
	색상<input type="color" id="color" name="color"><br>
	
	숫자<input type="range" id="range" value="100" min="100" max="10000" step="10"><br>
	<input type="button" value="확인" onclick="proc()">
	<input type="button" value="확인" onclick="change()">
</form>

</body>
</html>