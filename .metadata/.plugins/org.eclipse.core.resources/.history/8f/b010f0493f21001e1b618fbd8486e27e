  이름<input type="text" id="uname" name="name"><br>
  <input type="button" value="전송" onclick="sendProc()">
</form>

<form name="ff2" action="test.jsp" method="post">
  이름<input type="text" name="name"><br>
  <input type="submit" value="전송">
</form>
