<script>
proc1 = () => {
	str = "hostname : " + location.hostname + "<br>";
	str += "port : "+location.port + "<br>";
	str += "pathname : "+location.pathname + "<br>";
	str += "host : " +location.host + "<br>";
	
	document.getElementById('result1').innerHTML = str;
}
proc2 = () => {
	location.href = "http://localhost/webpro/0711/date객체2.html";
}
proc3 = () => {
	location.href = "http://localhost/webpro/0712/test.jsp?name='홍길동'";
}
sendProc = () => {
	
	//post방식으로 서버로 전송 - form을 검색
	vff1 = document.getElementById('ff1')
	vff2.action = "test.jsp";
	vff1.method = "post";
	
	vff1.submit();
	
}
</script>
</head>
<body>

<h3>location객체의 속성</h3>
<input type="button" value="확인" onclick="proc1()">

<h3>버튼 클릭 시 함수 호출 - 함수 내에서 페이지이동 실행<br>
location.href = "http://localhost/webpro/0711/date객체2.html";</h3>
<input type="button" value="확인" onclick="proc2()">
